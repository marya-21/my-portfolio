---
interface Props {
  title: string;
}

interface Portfolio {
  url: string;
  socialMedia: string;
}

const { title } = Astro.props;
const fullName = "M. Arya Syaiifullah";
const currentYear = getCurrentYear();

function getCurrentYear(): number {
  return new Date().getFullYear();
}

const portfolio: Portfolio[] = [
  { url: "Linkedin", socialMedia: "#" },
  { url: "Github", socialMedia: "#" },
  { url: "Twitter", socialMedia: "#" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link href="/src/styles.css" rel="stylesheet" />
    <title>{title} - Full Stack Developer</title>
  </head>
  <body class="bg-gray-50">
    <header class="bg-white shadow-sm">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-xl font-bold text-gray-800">{fullName}</a>
          <div class="space-x-4">
            <a href="#home" class="text-gray-600 hover:text-gray-900">Home</a>
            <a href="#about" class="text-gray-600 hover:text-gray-900">About</a>
            <a href="#projects" class="text-gray-600 hover:text-gray-900"
              >Projects</a
            >
            <a href="#contact" class="text-gray-600 hover:text-gray-900"
              >Contact</a
            >
          </div>
        </div>
      </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white py-8">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center">
          <p>&copy; {currentYear} {fullName}. All rights reserved.</p>
          <div class="space-x-4">
            {
              portfolio.map((item) => (
                <a href={item.socialMedia} class="hover:text-gray-300">
                  {item.url}
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
